@model E_Cart.Models.ProductModel
@{
    ViewBag.Title = "EachProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src="http://cdn.rawgit.com/elevateweb/elevatezoom/master/jquery.elevateZoom-3.0.8.min.js"></script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


<script type="text/javascript">
    document.write('<base href="' + document.location + '" />');
 </script>
<style type="text/css">


</style>



<link rel="stylesheet" href="style.css">
<link href="http://www.professorcloud.com/styles/cloud-zoom.css" rel="stylesheet" type="text/css">
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular.js"></script>
<script type="text/JavaScript" src="http://www.professorcloud.com/js/cloud-zoom.1.0.2.js"></script>
<script src="~/Scripts/app.js"></script>


<h3>Product Specification</h3>

<div ng-controller="MainCtrl">
        <div class="panel panel-default">
            <div class="panel-heading">@Model.Name</div>
            <div class="panel-body">
                <div class="col-sm-3 col-md-6" style="color:blue">
                    <a href="~/Images/@Model.CategoryName/@Model.Url" class="cloud-zoom" rel="adjustX: 10, adjustY:-4">
                        <img src="~/Images/@Model.CategoryName/@Model.Url " width="400" height="400" />
                    </a>

                </div>
                <div class="col-sm-9 col-md-6">
                    <h3><span id="mobilename" style="color:black"><b>Product Type:</b></span></h3>
                    <h6><span id="mobilename" style="color:black">@Model.CategoryName</span></h6>

                    <h3><span id="mobilename" style="color:black"><b>Name:</b></span></h3>
                    <h6><span id="mobilename" style="color:black">@Model.Name</span></h6>
                    
                    <h3><span id="mobilename" style="color:black"><b>Description</b></span></h3>
                    <h4><span id="mobilename" style="color:black">@Model.Description</span></h4>

                    <h3><span id="mobilename" style="color:black"><b>Company:</b></span></h3>
                    <h6><span id="mobilename" style="color:black">@Model.CompanyName</span></h6>

                    <h3><span id="mobilename" style="color:black"><b>Available Quantity:</b></span></h3>
                    <h6><span id="mobilename" style="color:black">@Model.AvailableQuantity</span></h6>

                    <h3><span id="mobilename" style="color:black"><b>Price:</b></span></h3>
                    <h6><span id="mobilename" style="color:black">@Model.Price Rs</span></h6>

                    <h3><span id="mobilename" style="color:black"><b>Available Color:</b></span></h3>
                    <h4><span id="mobilename" style="color:black">
                         <ul>
                            @foreach( var color in @Model.AvailableColors)
                            {
                              <li>   <a href="@Url.Action("ProductDetail", "Home",new { color = @color , productId = @Model.ProductId })">@color</a> </li>
                            }
                         </ul>
                    </span></h4>

                </div>

            </div>

            <div>

                <a  id="btn_add" href="@Url.Action("Add", "AddToCart",Model)" class="btn btn-info btn-lg" style="margin-left:60px">
                    <span class="glyphicon glyphicon-shopping-cart"></span> Add To Cart
                </a>

                <a id="btn_add" href="@Url.Action("Index", "Home")" class="btn btn-info btn-lg" style="margin-left:60px">
                    <span class="glyphicon glyphicon-eye-open"></span> Continue shopping
                </a>
                <br />
                <br />

            </div>
        </div> 

</div>



